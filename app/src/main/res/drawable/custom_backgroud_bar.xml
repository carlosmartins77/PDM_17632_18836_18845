<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the background color of the progress bar -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/gray" /> <!-- Set your desired background color here -->
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- Define the progress color of the progress bar -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/blue" /> <!-- Set your desired progress color here (blue) -->
                <corners android:radius="10dp" />
            </shape>
        </clip>
    </item>
</layer-list>

