<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Account.PersonalInfo">

    <TextView
        android:id="@+id/personalInfoLabel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        android:text="Personal Info"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <ImageView
        android:id="@+id/userImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/personalInfoLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/password_changed" />

    <TextView
        android:id="@+id/complete_your_profile_full_name"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/userImageView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20sp"
        >
    </TextView>

    <EditText
        android:id="@+id/complete_your_profile_full_name_field"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/complete_your_profile_full_name"
        app:layout_constraintStart_toStartOf="@id/complete_your_profile_full_name"
        android:contentDescription="Full Name input field">
    </EditText>

    <TextView
        android:id="@+id/complete_your_profile_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/complete_your_profile_full_name_field"
        app:layout_constraintStart_toStartOf="@id/complete_your_profile_full_name_field"
        android:layout_marginTop="20sp">
    </TextView>

    <EditText
        android:id="@+id/complete_your_profile_phone_number_field"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/complete_your_profile_phone_number"
        app:layout_constraintStart_toStartOf="@id/complete_your_profile_phone_number"
        android:contentDescription="Phone Number input field">
    </EditText>

    <TextView
        android:id="@+id/complete_your_profile__date_of_birth"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/complete_your_profile_phone_number_field"
        app:layout_constraintStart_toStartOf="@id/complete_your_profile_phone_number_field">
    </TextView>

    <EditText
        android:id="@+id/complete_your_profile_date_of_birth_field"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:contentDescription="Date of birth input field"
        app:layout_constraintTop_toBottomOf="@id/complete_your_profile__date_of_birth"
        app:layout_constraintStart_toStartOf="@id/complete_your_profile__date_of_birth">
    </EditText>

    <Button
        android:id="@+id/complete_your_profile_pick_dateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/complete_your_profile__date_of_birth"
        android:layout_marginRight="50sp"
        android:text="Pick date">
    </Button>


    <TextView
        android:id="@+id/complete_your_profile_country"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Country"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/complete_your_profile_date_of_birth_field"
        app:layout_constraintStart_toStartOf="@id/complete_your_profile_date_of_birth_field">
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dropdown_layout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/complete_your_profile_country"
        app:layout_constraintStart_toStartOf="@id/complete_your_profile_country"
        >
        <AutoCompleteTextView
            android:id="@+id/dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_margin="20dp"
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/button_border_get_started"
        app:menu="@menu/bottom_nav">
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>