<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MyTeamsPage.Material"
    tools:context=".Activities.Account.PersonalInfo">

    <TextView
        android:id="@+id/personalInfoLabel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        android:text="Personal Info"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <ImageView
        android:id="@+id/userImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/personalInfoLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/password_changed" />

    <TextView
        android:id="@+id/complete_your_profile_full_name"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/userImageView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20sp"
        >
    </TextView>

    <EditText
        android:id="@+id/complete_your_profile_full_name_field"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/complete_your_profile_full_name"
        app:layout_constraintStart_toStartOf="@id/complete_your_profile_full_name"
        android:contentDescription="Full Name input field">
    </EditText>

    <TextView
        android:id="@+id/complete_your_profile_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/complete_your_profile_full_name_field"
        app:layout_constraintStart_toStartOf="@id/complete_your_profile_full_name_field"
        android:layout_marginTop="20sp">
    </TextView>

    <EditText
        android:id="@+id/complete_your_profile_phone_number_field"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/complete_your_profile_phone_number"
        app:layout_constraintStart_toStartOf="@id/complete_your_profile_phone_number"
        android:contentDescription="Phone Number input field">
    </EditText>

    <TextView
        android:id="@+id/complete_your_profile__date_of_birth"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/complete_your_profile_phone_number_field"
        app:layout_constraintStart_toStartOf="@id/complete_your_profile_phone_number_field">
    </TextView>

    <LinearLayout
        android:id="@+id/birth_Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/complete_your_profile__date_of_birth">

        <EditText
            android:id="@+id/birth_Date_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:drawableRight="@drawable/calendar"
            android:contentDescription="Date of birth input field"
            app:layout_constraintTop_toBottomOf="@id/complete_your_profile__date_of_birth"
            app:layout_constraintStart_toStartOf="@id/complete_your_profile__date_of_birth">
        </EditText>
    </LinearLayout>

    <TextView
        android:id="@+id/complete_your_profile_country"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Country"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/birth_Date"
        app:layout_constraintStart_toStartOf="@id/birth_Date">
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/select_team"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Select Country"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/complete_your_profile_country"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        app:layout_constraintEnd_toEndOf="parent">
        <AutoCompleteTextView
            android:id="@+id/auto_complete_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:importantForAccessibility="yes"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_margin="20dp"
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/button_border_get_started"
        app:menu="@menu/bottom_nav">
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>