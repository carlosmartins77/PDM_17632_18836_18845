<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/teamName"
        android:layout_width="170sp"
        android:layout_height="40sp"
        android:text="Equipa 1"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <ImageView
        android:id="@+id/teamImage"
        android:layout_width="115sp"
        android:layout_height="135sp"
        android:layout_marginTop="10sp"
        app:layout_constraintStart_toStartOf="@id/teamName"
        app:layout_constraintTop_toBottomOf="@id/teamName"
        android:contentDescription="teamImage">
    </ImageView>

    <TextView
        android:id="@+id/nextGameBox"
        android:text="NEXT GAME"
        android:textSize="20sp"
        android:layout_width="100sp"
        android:layout_height="25sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        app:layout_constraintStart_toEndOf="@id/teamImage"
        app:layout_constraintTop_toBottomOf="@id/teamName">
    </TextView>

    <TextView
        android:id="@+id/gameTime"
        android:layout_width="100sp"
        android:layout_height="25sp"
        android:textSize="20sp"
        android:text="20:30"
        android:layout_marginTop="10sp"
        app:layout_constraintStart_toStartOf="@id/nextGameBox"
        app:layout_constraintTop_toBottomOf="@id/nextGameBox">
    </TextView>

    <ImageView
        android:id="@+id/opponentImage"
        android:layout_width="65sp"
        android:layout_height="65sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        app:layout_constraintTop_toBottomOf="@id/gameTime"
        app:layout_constraintStart_toEndOf="@id/teamImage">
    </ImageView>

    <TextView
        android:id="@+id/opponentName"
        android:layout_width="70sp"
        android:layout_height="25sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:text="Equipa 2"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/opponentImage"
        app:layout_constraintTop_toBottomOf="@id/gameTime">
    </TextView>



</androidx.constraintlayout.widget.ConstraintLayout>