<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ScheduleGames.GameSchedule">
    <TextView
        android:id="@+id/my_teams_Kickoff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="KICKOFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/my_teams"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textSize="19sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_teams_Kickoff" />

    <TextView
        android:id="@+id/gameScheduleDateTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_teams"
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_height="wrap_content">

    </TextView>
    <ImageView
        android:id="@+id/gameScheduleTeam1Img"
        app:layout_constraintTop_toBottomOf="@id/gameScheduleDateTv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"
        android:layout_width="130dp"
        android:layout_height="130dp">
    </ImageView>

    <TextView
        android:id="@+id/gameScheduleTeam1Tv"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/gameScheduleTeam1Img"
        app:layout_constraintStart_toStartOf="@id/gameScheduleTeam1Img"
        android:textAlignment="center">
    </TextView>

    <ImageView
        android:id="@+id/gameScheduleTeam2Img"
        app:layout_constraintTop_toBottomOf="@id/gameScheduleDateTv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="55dp"
        android:layout_marginTop="20dp"
        android:layout_width="130dp"
        android:layout_height="130dp">
    </ImageView>

    <TextView
        android:id="@+id/gameScheduleTeam2Tv"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/gameScheduleTeam2Img"
        app:layout_constraintStart_toStartOf="@id/gameScheduleTeam2Img"
        android:textAlignment="center">
    </TextView>

    <TextView
        android:id="@+id/gameLocationTv"
        app:layout_constraintTop_toBottomOf="@id/gameScheduleTeam1Tv"
        app:layout_constraintStart_toStartOf="@id/my_teams"
        android:textSize="19sp"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="LOCATION"
        android:layout_height="wrap_content">
    </TextView>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginTop="15dp"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gameLocationTv"/>


</androidx.constraintlayout.widget.ConstraintLayout>