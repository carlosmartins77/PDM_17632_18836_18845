<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/layout_item_photo_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/complete_your_profile_header"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="@id/layout_item_photo_iv"
        app:layout_constraintStart_toEndOf="@id/layout_item_photo_iv"
        app:layout_constraintTop_toTopOf="@id/layout_item_photo_iv">

        <TextView
            android:id="@+id/layout_item_name_tv"
            android:layout_width="240dp"
            android:layout_height="35dp"
            android:textSize="15sp"
            android:paddingStart="10dp"
            app:layout_constraintBottom_toBottomOf="@id/layout_item_photo_iv"
            app:layout_constraintStart_toEndOf="@id/layout_item_photo_iv"
            app:layout_constraintTop_toTopOf="@id/layout_item_photo_iv" />

        <ImageView
            android:id="@+id/complete_your_profile_arrow_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:src="@drawable/arrow_icon_right" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>