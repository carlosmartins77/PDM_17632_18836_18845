<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ComposeTweet">

    <TextView
        android:id="@+id/compose_tweet_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="KICKOFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/compose_tweet_header"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/compose_tweet_logo">

        <ImageView
            android:id="@+id/compose_tweet_arrow_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:src ="@drawable/baseline_arrow_back_24" />


        <TextView
            android:id="@+id/compose_tweet_publication_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Publication"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/compose_tweet_publish"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compose_tweet_header">

        <TextView
            android:id="@+id/compose_tweet_Write_publication"
            android:layout_width="250dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:hint="Writing publication"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="PUBLISH"
            android:textColorHint="@color/white"
            android:background="@drawable/button_border_get_started"
            android:textColor="@color/white" />

    </LinearLayout>

    <ImageView
        android:id="@+id/compose_tweet_profile"
        android:layout_width="54dp"
        android:layout_height="56dp"
        android:layout_margin="20dp"
        android:src="@drawable/baseline_person_24"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compose_tweet_publish"></ImageView>

    <EditText
        android:id="@+id/editProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Enter your profile name"
        app:layout_constraintTop_toBottomOf="@+id/compose_tweet_profile"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="25dp"
        app:layout_constraintTop_toBottomOf="@+id/editProfile">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_image_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_gif_box_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_stacked_bar_chart_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_location_on_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=" /255"></TextView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>